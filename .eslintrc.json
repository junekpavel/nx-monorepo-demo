{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nrwl/nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              { "sourceTag": "scope:first-client", "onlyDependOnLibsWithTags": ["scope:first-client", "scope:shared"] },
              { "sourceTag": "scope:second-client", "onlyDependOnLibsWithTags": ["scope:second-client", "scope:shared"] },
              { "sourceTag": "scope:shared", "onlyDependOnLibsWithTags": ["scope:shared"] },

              { "sourceTag": "type:util", "onlyDependOnLibsWithTags": ["type:util"] },
              { "sourceTag": "type:ui", "onlyDependOnLibsWithTags": ["type:util", "type:ui"] },
              { "sourceTag": "type:data-access", "onlyDependOnLibsWithTags": ["type:util", "type:data-access"] }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nrwl/nx/typescript"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nrwl/nx/javascript"],
      "rules": {}
    }
  ]
}
